            transform: scale(1.1) rotate(10deg);
            background: rgba(46, 204, 113, 0.2);
        }

        .advantage-content h4 {
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: 0.75rem;
            color: var(--dark-color);
        }

        .advantage-content p {
            color: #666;
            margin-bottom: 0;
            line-height: 1.6;
        }

        @media (max-width: 768px) {
            .advantage-card {
                padding: 1.5rem;
            }
            .advantage-icon {
                font-size: 2rem;
                min-width: 50px;
                height: 50px;
            }
            .advantage-content h4 {
                font-size: 1.1rem;
            }
        }
    </style>
</head>
